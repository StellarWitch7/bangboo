<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical">
                    <children>
                        <label id="atk">
                            <text>atk meow</text>
                        </label>
                        <label id="cd">
                            <text>cd meow</text>
                        </label>
                        <label id="hp">
                            <text>hp woof</text>
                        </label>
                        <label id="def">
                            <text>def meow</text>
                        </label>
                        <label id="lvl">
                            <text> </text>
                        </label>
                        <button id="pickup">
                            <text>pickup</text>
                        </button>
                        <button id="level up">
                            <text>level up</text>
                        </button>
                        <button id="details">
                            <text>details</text>
                        </button>
                    </children>
                </flow-layout>
            </children>

            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>
            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>